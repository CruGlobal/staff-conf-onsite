panel "Cost Adjustments (#{person.cost_adjustments.size})", class: 'cost_adjustments' do
  if person.cost_adjustments.any?
    ul do
      person.cost_adjustments.each do |ca|
        li do
          link_to("#{cost_adjustment_amount(ca)} - #{cost_type_name(ca)}", ca)
        end
      end
    end
  else
    strong('None')
  end
end


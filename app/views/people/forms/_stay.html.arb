form.has_many :stays, heading: nil, title: title, for: stays do |f|
  f.input(
    :housing_type,
    as: :select,
    collection: housing_type_select
  )

  if f.object.housing_type
    housing_facilities = housing_unit_hierarchy[f.object.housing_type].collect do |id, hash|
      [hash[:name], id]
    end
  else
    housing_facilities = []
  end

  f.input(
      :housing_facility_id,
      as: :select,
      collection: housing_facilities
  )

  if f.object.housing_facility_id
    housing_units = housing_unit_hierarchy[f.object.housing_type][f.object.housing_facility_id][:units]
  else
    housing_units = []
  end

  f.input(
    :housing_unit_id,
    as: :select,
    collection: housing_units
  )

  datepicker_input(f, :arrived_at)
  datepicker_input(f, :departed_at)

  dynamic_stay_input(f, :percentage)
  dynamic_stay_input(f, :single_occupancy)
  dynamic_stay_input(f, :no_charge)
  dynamic_stay_input(f, :waive_minimum)

  f.input :comment, input_html: { rows: 4 }
  f.input :_destroy, as: :boolean, wrapper_html: { class: 'destroy' }
end
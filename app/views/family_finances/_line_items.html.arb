# vim:ft=ruby:
tr { th title, colspan: 2, class: 'finances-table__title' }

if collection.any?
  collection.each { |row| render 'family_finances/row', row: row }
else
  tr do
    td(colspan: policy.show_finances? ? 1 : 2) { em 'None...' }

    if policy.show_finances?
      td(class: 'finances-table__price') do
        humanized_money_with_symbol 0
      end
    end
  end
end

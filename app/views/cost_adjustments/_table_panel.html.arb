panel "Cost Adjustments (#{cost_adjustments.size})", class: 'cost_adjustments' do
  if cost_adjustments.any?
    table do
      thead do
        tr do
          th 'Cost Type'
          th 'Description'
          th 'Amount'
        end
      end

      tbody do
        cost_adjustments.each do |ca|
          tr do
            td cost_type_name(ca)
            td simple_format_attr(ca, :description)
            td cost_adjustment_amount(ca)
          end
      end
      end
    end
    ul do
    end
  else
    strong('None')
  end
end


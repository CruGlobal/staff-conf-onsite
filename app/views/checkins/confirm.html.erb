<% content_for :title, t('checkin.confirm_title') %>
<% content_for :page_title, t('checkin.confirm_title') %>

<div class="confirm-message">
  <strong><%= t('checkin.confirm_message') %></strong>
</div>

<%= render 'family_info' %>

<%= render 'button_group' do %>
  <%= form_with url: checkins_path, method: :post, local: true do |form| %>
    <%= form.hidden_field :family_id, value: @family.id %>
    <%= form.submit t('checkin.confirm_arrival'), class: 'btn btn-confirm' %>
  <% end %>
  <%= link_to t('checkin.scan_different_family'), new_checkin_path, class: 'btn btn-secondary-action' %>
<% end %>

<% content_for :javascript do %>
  <script>
    // Auto-focus on the "Confirm Arrival" button for quick access
    document.addEventListener('DOMContentLoaded', function() {
      const confirmButton = document.querySelector('.btn-confirm');
      if (confirmButton) {
        confirmButton.focus();
      }
    });
  </script>
<% end %> 
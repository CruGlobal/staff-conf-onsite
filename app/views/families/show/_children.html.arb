context.instance_exec do
  children = family.children.load

  panel 'Children' do
    if children.any?
      ul do
        children.each do |p|
          li link_to(p.full_name, child_path(p))
        end
      end
    else
      strong 'None'
    end
    div do
      a 'New Child', href: new_child_path(family_id: family.id)
    end
  end
end

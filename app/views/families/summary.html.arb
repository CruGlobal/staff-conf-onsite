# vim:ft=ruby:
render 'family_summary', finances: finances, family: family

form_for family, url: checkin_family_path(family.id), method: :post do
  fieldset class: 'checkin actions' do
    ol do
      if finances.remaining_balance.zero?
        li class: 'action input_action' do
          input type: :submit, value: family.checked_in? ? 'Check-in' : 'Re-Send Summary'
        end
        li class: 'cancel' do
          a 'Nametags (PDF)', target: '_blank', href: nametag_family_path(family)
        end
        li class: 'cancel' do
          a 'Print', href: 'javascript:window.print()'
        end
      end
      li class: 'cancel' do
        a 'Cancel', href: family_path(family)
      end
    end
  end
end
